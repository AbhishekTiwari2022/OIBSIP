<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idQuestionAttempt"
        android:text="Number Of Questions"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="60dp"
        android:textAlignment="center"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idQuestion"
        android:text="Question"
        android:textSize="25sp"
        android:layout_below="@id/idQuestionAttempt"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idQuestion"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idBtnOption1"
            android:layout_margin="10dp"
            android:background="@color/design_default_color_primary"
            android:padding="5dp"
            android:textColor="@color/white"
            android:text="Option1" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idBtnOption2"
            android:layout_margin="10dp"
            android:background="@color/design_default_color_primary"
            android:padding="5dp"
            android:textColor="@color/white"
            android:text="Option2" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idBtnOption3"
            android:layout_margin="10dp"
            android:background="@color/design_default_color_primary"
            android:padding="5dp"
            android:textColor="@color/white"
            android:text="Option3" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idBtnOption4"
            android:background="@color/design_default_color_primary"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:padding="5dp"
            android:text="Option4" />
    </LinearLayout>
</RelativeLayout>